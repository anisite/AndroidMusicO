<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/appLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242021"
    android:scaleType="centerCrop"
    tools:context=".MainActivity" >

    <!-- android:background="#4a4a4a" -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pub"
        android:layout_alignParentTop="true"
        android:layout_weight="0.18"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/player_header_bg"
            android:layout_width="257dp"
            android:layout_height="match_parent"
            android:background="@layout/bg_player_header"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|fill"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/songTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingTop="0dp"
                    android:scrollHorizontally="true"
                    android:shadowColor="#FF000000"
                    android:shadowRadius="5"
                    android:singleLine="true"
                    android:text="@string/loading"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="12pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/songArtist"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:onClick="play"
                    android:scrollHorizontally="true"
                    android:shadowColor="#FF000000"
                    android:shadowRadius="5"
                    android:singleLine="true"
                    android:text="@string/please"
                    android:textColor="#fff"
                    android:textSize="10pt"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/player_footer_bg"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:gravity="bottom|center" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="98dp"
                        android:background="@layout/rounded_corner"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp" >

                        <ImageButton
                            android:id="@+id/btnPlay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.75"
                            android:background="@null"
                            android:contentDescription="@string/desc_play_button"
                            android:src="@drawable/btn_play" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/adele"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:contentDescription="@string/desc_pochette"
            android:scaleType="centerInside"
            android:src="@drawable/adeleo" />

    </LinearLayout>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        app:adSize="SMART_BANNER"
        app:adUnitId="b39fc68b3b4847ae" >
    </com.google.android.gms.ads.AdView>

</RelativeLayout>